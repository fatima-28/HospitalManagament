@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }
    </style>


<div class="custom-register">
    <section class="h-100 bg-white">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row ">
                             <div class="col-xl-12">
                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="card-body p-md-5 text-black">
                                        <h3 class="mb-5 text-uppercase">Create Account</h3>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                      

                                        <div class="form-outline mb-4">
                                            <label class="form-label" asp-for="Input.Email" for="form3Example8">Email</label>
                                            <input asp-for="Input.Email"  autocomplete="username" id="form3Example8" class="form-control form-control-lg" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" asp-for="Input.Password" for="form3Example8">Password</label>
                                            <input asp-for="Input.Password" type="password" autocomplete="password" id="form3Example9" class="form-control form-control-lg" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" asp-for="Input.ConfirmPassword" for="form3Example80">Confirm Password</label>
                                            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="password" id="form3Example10" class="form-control form-control-lg" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                 

                                        <div class="d-flex justify-content-end pt-3">
                                           
                                            <button type="button" class="btn btn-warning btn-lg ms-2">Submit form</button>
                                        </div>

                                    </div>

                                </form>
                               </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
